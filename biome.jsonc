{
	"root": false,
	"$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
	"files": {
		"includes": ["**", "!**/lib", "!**/node_modules", "!**/pnpm-lockfile.yaml"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"formatter": {
		"useEditorconfig": true
	},
	"javascript": {
		"formatter": {
			"lineWidth": 120,
			"quoteStyle": "single"
		}
	}
}
